<Window x:Class="Lecture9._1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lecture9._1"
        mc:Ignorable="d"
        Title="Мое Окно" 
        MinHeight = "200"
        MinWidth = "200"
        MaxHeight = "700"
        MaxWidth = "1000"
        Height="500"
        Width="600">



    <Grid>
        <Button x:Name="Button" 
                Content="Пуск" 
                HorizontalAlignment="Center" 
                Margin="10,10,0,0" VerticalAlignment="Center" 
                Width="75" 
                FontFamily="Segoe Script" 
                FontSize="16" 
                FontWeight="Bold" 
                Foreground="#FF380B0B" Click="Button_Click" MouseUp="Button_MouseUp"/>
        <TextBox x:Name="txtName" 
                 
                 Height="30" Margin="1,70,0,0" 
                 TextWrapping="Wrap" 
                 TextAlignment="Center"
                 VerticalAlignment="Top" 
                 Width="200" Foreground="Black"
                 Background="Aquamarine"
                 FontSize="20"
                 Grid.Row="0"
        />

    </Grid>
</Window>
